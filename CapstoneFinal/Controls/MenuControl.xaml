<UserControl
    x:Class="SpaceInvaders.Views.Controls.MenuControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
        <TextBlock Text="SPACE" Foreground="White" FontSize="80" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Text="INVADERS" Foreground="LightGreen" FontSize="80" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,-30,0,20"/>

        <Button Content="INICIAR JOGO" FontSize="24" FontWeight="SemiBold" Command="{Binding StartGameCommand}" HorizontalAlignment="Center"/>
        <Button Content="PONTUAÇÕES" FontSize="24" FontWeight="SemiBold" Command="{Binding ShowHighScoresCommand}" HorizontalAlignment="Center"/>
        <Button Content="CONTROLES" FontSize="24" FontWeight="SemiBold" Command="{Binding ShowControlsCommand}" HorizontalAlignment="Center"/>
    </StackPanel>

</UserControl>
